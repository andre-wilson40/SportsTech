@model SportsTech.Web.Areas.Clubs.ViewModels.TeamCompetition.RegisterViewModel

<div class="form-group">
    @Html.LabelFor(model => model.SeasonId, new { @class = "control-label col-xs-3" })
    <div class="col-xs-9">
        @Html.DropDownListFor(model => model.SeasonId, Model.Seasons, string.Empty,  new { @class = "form-control" })
