@model SportsTech.Web.Areas.Events.ViewModels.Event.CreateViewModel

<div class="form-group">
    @Html.LabelFor(model => model.Against, new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextBoxFor(model => model.Against, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Against)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.IsHomeGame, new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        <div class="checkbox">
            <label>
                @Html.CheckBoxFor(model => model.IsHomeGame)
            </label>
            @Html.ValidationMessageFor(model => model.IsHomeGame)
        </div>
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Referee, new { @class = "control-label col-md-2" })
