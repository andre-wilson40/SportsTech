@section scripts
{
    <script>
        var Page = {
            dataTableColumns: [
                { sName: "Name" },
                { sName: "Score" },
                { sName: "Event date" },
                { sName: "Home Game" }
            ],
            dataTableLoadUrl: '@Url.Action("DataTable")',
            dataTableEditUrl: '@Url.Action("View", "Dashboard")',            
            dataTableShowDelete: true                
