        $(function () {
            $("#create-event-btn").on("click", function (event) {
                site.core.redirect('@Url.Action("Create")');
            });
        });
    </script>

    <script src="~/Scripts/site.dataTable.js"></script>
}
<p>    
    <button id="create-event-btn" class="btn btn-primary">Create</button>
</p>
